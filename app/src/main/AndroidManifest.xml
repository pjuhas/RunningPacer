<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sk.upjs.vma.runningpacer">

    <application
        android:name=".TrainingPaceApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/runner_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/runner_ic_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RunningPacer"
        >
        <activity
            android:name=".common.presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RunningPacer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>